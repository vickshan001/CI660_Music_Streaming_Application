<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Set the desired background color -->
    <corners android:radius="50dp" /> <!-- Use a large radius to make the image circular -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
    <item>
        <shape>
            <solid android:color="#80000000" /> <!-- Set the shadow color -->
            <corners android:radius="50dp" /> <!-- Use the same radius value as the outer shape -->
        </shape>
    </item>
</shape>
